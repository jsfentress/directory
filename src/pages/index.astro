---
import EventDirectory from '../components/EventDirectory.jsx';
import '../styles/global.css';

const events = [
	{
		id: 1,
		title: 'Indie Night',
		venue: 'The 5 Spot',
		date: '2025-06-29',
		vibe: ['chill', 'acoustic'],
		description: 'A relaxed evening of acoustic performances.',
	},
	{
		id: 2,
		title: 'Loud & Local',
		venue: 'Exit/In',
		date: '2025-07-01',
		vibe: ['rowdy'],
		description: 'Showcasing heavy-hitting local bands.',
	},
	{
		id: 3,
		title: 'Experimental Jam',
		venue: 'DRKMTTR',
		date: '2025-07-04',
		vibe: ['experimental'],
		description: 'Avant-garde sounds and synths.',
	}
];

const tags = ['chill', 'acoustic', 'rowdy', 'experimental'];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Nashville Event Directory</title>
		<style>
			body {
				font-family: system-ui, sans-serif;
				background: #f8fafc;
				margin: 0;
			}
			.directory-container {
				max-width: 700px;
				margin: 2rem auto;
				background: #fff;
				border-radius: 1.5rem;
				box-shadow: 0 2px 12px 0 #0001;
				padding: 2rem 1.5rem 2.5rem 1.5rem;
			}
			.logo {
				display: flex;
				justify-content: center;
				align-items: center;
				margin-bottom: 1rem;
			}
			.logo svg {
				width: 48px;
				height: 48px;
				display: block;
			}
			.main-title {
				text-align: center;
				font-size: 2rem;
				font-weight: bold;
				margin-bottom: 0.25rem;
				letter-spacing: -1px;
			}
			.subtitle {
				text-align: center;
				color: #64748b;
				font-size: 1.1rem;
				margin-bottom: 0.5rem;
			}
			.description {
				text-align: center;
				color: #475569;
				margin-bottom: 1.5rem;
				font-size: 1rem;
			}
			.search-row {
				display: flex;
				gap: 0.5rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
				justify-content: center;
			}
			.search-box {
				flex: 1 1 180px;
				min-width: 140px;
				max-width: 250px;
				padding: 0.5rem 1rem;
				border: 1px solid #cbd5e1;
				border-radius: 0.75rem;
				font-size: 1rem;
				outline: none;
				transition: border 0.2s;
			}
			.search-box:focus {
				border-color: #6366f1;
			}
			.tag-btn {
				background: #f1f5f9;
				border: 1px solid #cbd5e1;
				border-radius: 0.75rem;
				padding: 0.5rem 1.2rem;
				font-size: 1rem;
				color: #334155;
				cursor: pointer;
				transition: background 0.2s, border 0.2s;
			}
			.tag-btn:hover, .tag-btn.active {
				background: #6366f1;
				color: #fff;
				border-color: #6366f1;
			}
			.cards-row {
				display: grid;
				grid-template-columns: 1fr;
				gap: 1.5rem;
				margin-top: 1.5rem;
			}
			@media (min-width: 600px) {
				.cards-row {
					grid-template-columns: 1fr 1fr 1fr;
				}
			}
		</style>
	</head>
	<body class="p-8 max-w-5xl mx-auto font-sans">
		<header class="mb-6">
			<h1 class="text-4xl font-bold mb-2">Nashville Event Directory</h1>
			<p class="text-gray-600">Discover local shows by vibe, venue, or keyword.</p>
		</header>

		<EventDirectory client:load events={events} tags={tags} />
	</body>
</html>
