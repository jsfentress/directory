---
import '../styles/global.css';
---
<html lang="en">
  <head>
    <title>Submit an Event | Nashville Music Radar</title>
  </head>
  <body class="p-8 max-w-2xl mx-auto font-sans bg-gray-50">
    <!-- Top nav bar -->
    <nav class="fixed top-0 left-0 w-full bg-white border-b border-gray-200 z-50">
      <div class="max-w-5xl mx-auto flex items-center gap-2 p-3 justify-end">
        <a href="/" class="font-semibold text-lg text-indigo-700 hover:underline">Home</a>
        <a href="/submit" class="ml-2 px-3 py-1 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">Submit an Event</a>
      </div>
    </nav>
    <div class="h-14"></div>
    <main>
      <h1 class="text-3xl font-bold mb-4 text-center">Submit Your Event</h1>
      <form class="w-full max-w-lg sm:mx-auto bg-white p-4 sm:p-6 rounded-lg shadow flex flex-col gap-4">
        <input type="text" name="title" placeholder="Event title" required class="w-full px-4 py-3 border border-gray-300 rounded text-base" />
        <input type="text" name="venue" placeholder="Venue" required class="w-full px-4 py-3 border border-gray-300 rounded text-base" />
        <input type="date" name="date" required class="w-full px-4 py-3 border border-gray-300 rounded text-base" />
        <input type="text" name="price" placeholder="Price (e.g. $10, Free)" class="w-full px-4 py-3 border border-gray-300 rounded text-base" />
        <textarea name="description" placeholder="Event description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded text-base"></textarea>
        <button type="submit" class="w-full px-4 py-3 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition text-base font-semibold">Submit Event</button>
      </form>
    </main>
  </body>
</html> 